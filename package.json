{
  "name": "doggy-tutu-trade",
  "version": "1.0.0",
  "description": "A lightweight desktop crypto trading app for Binance",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps",
    "generate-icons": "node scripts/generate-icons.js"
  },
  "keywords": [
    "crypto",
    "trading",
    "binance",
    "electron",
    "desktop"
  ],
  "author": "Doggy&Tutu Trade",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "sharp": "^0.34.2"
  },
  "dependencies": {
    "keytar": "^7.9.0",
    "lowdb": "^1.0.0",
    "node-fetch": "^2.7.0",
    "ws": "^8.14.2"
  },
  "build": {
    "appId": "com.doggytutu.trade",
    "productName": "Doggy&Tutu Trade",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "src/renderer/icons/logo.png",
      "extendInfo": {
        "CFBundleDisplayName": "Doggy&Tutu Trade",
        "CFBundleName": "Doggy&Tutu Trade"
      }
    },
    "win": {
      "target": "nsis",
      "icon": "src/renderer/icons/logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/renderer/icons/logo.png"
    }
  }
}
